{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./build",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules"]
}